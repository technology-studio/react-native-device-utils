{
  "description": "Technology Studio - React native device utils",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/technology-studio/react-native-device-utils.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://bitbucket.org/technology-studio/"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "concurrently \"yarn workspaces run build:watch\" \"jest --watch\"",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty --ext .jsx,.js,.ts,.tsx . --fix",
    "git-hook": "yarn -s lint",
    "postinstall": "husky install",
    "print-txo-packages": "yarn list 2> /dev/null|grep @txo|sed 's/.*\\(@txo[^@]*\\)@^*\\([^ ]*\\).*/\\1@\\2/g'|sort|uniq",
    "sanity": "yarn lint && yarn tsc && yarn test && yarn outdated && echo 'success'",
    "wd": "yarn workspace @txo/react-native-device-utils",
    "wpd": "yarn workspace @txo-peer-dep/react-native-device-utils"
  },
  "workspaces": [
    "packages/@txo/*",
    "packages/@txo-peer-dep/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@txo-peer-dep/log": "^3.0.0",
    "@txo/log-console": "^2.0.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "^6.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.22.0",
    "eslint-config-txo-typescript": "^2.2.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "npm-check-updates": "^11.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-native-device-info": "^8.0.8",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/__tests__/**/*.ts",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@txo).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/__tests__/Config/",
      "<rootDir>/__tests__/Setup.ts",
      "<rootDir>/__tests__/Utils/"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/Setup.ts"
    ]
  }
}
