{
  "description": "Technology Studio - React native device utils",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/technology-studio/react-native-device-utils.git"
  },
  "author": {
    "name": "Technology Studio",
    "email": "npm@technologystudio.sk",
    "url": "https://bitbucket.org/technology-studio/"
  },
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "test": "jest",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean --force",
    "newclear": "rm -rf $TMPDIR/react-* && watchman watch-del-all && rm -rf ios/build && rm -rf node_modules/ && npm cache clean --force && npm i",
    "test:watch": "jest --watch",
    "updateSnapshot": "jest --updateSnapshot",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "lintdiff": "git diff --name-only --cached --relative | grep '\\.js$' | eslint --cache --format=node_modules/eslint-formatter-pretty",
    "lint": "eslint --format=node_modules/eslint-formatter-pretty .",
    "fixcode": "eslint --format=node_modules/eslint-formatter-pretty . --fix",
    "git-hook": "yarn -s lint && yarn flow check"
  },
  "workspaces": [
    "packages/@txo/*",
    "packages/@txo-peer-dep/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run git-hook",
      "pre-push": "yarn run git-hook"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@txo/babel-preset": "^1.0.0",
    "@txo/glow": "^1.2.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-txo-react": "^4.0.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.0",
    "flow-bin": "^0.121.0",
    "flow-copy-source": "^2.0.9",
    "flow-typed": "^3.1.0",
    "husky": "^4.2.3",
    "jest": "^25.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-native-device-info": "^8.0.8",
    "react-native-keychain": "^3.1.3",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/__tests__/**/*.js",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!@txo).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/__tests__/Setup.js",
      "<rootDir>/__tests__/Utils/"
    ],
    "setupFiles": [
      "<rootDir>/__tests__/Setup"
    ]
  }
}
